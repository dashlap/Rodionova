#include <iomanip>
#include <iostream>
using namespace std;


int main()
{
	setlocale(LC_ALL, "ru");
	int a[10], i, b[10];
	srand((unsigned)time(NULL));//вкл генератор случайных чисел
	cout << "Исходный массив" << endl;
	for (i = 0; i < 10; i++)
	{
		b[i] = a[i] = rand() % 100 - 50;//генерим случайное число от -50 до 100
		cout << setw(4) << a[i];
	}
	cout << endl;
	cout << endl << "Сортировка методом простого выбора" << endl;
	int min, imin, j;
	for (i = 0; i < 9; i++)
	{
		min = a[i];
		imin = i;
		for (j = i + 1; j < 10; j++)
		{
			min = a[j];
			imin = j;
		}
		/*int t = a[i];
		a[i] = a[min];
		a[min] = t;*/
		a[imin] = a[i];
		a[i] = min;
	}
	cout << "Сортированный массив" << endl;
	for (i = 0; i < 10; i++)
	{
		cout << setw(4) << a[i];
	}
	cout << endl;
	cout << endl << "Сортировка методом парных перестановок" << endl;
	int t, flag;
	do 
	{
		flag = 0;
		for (i = 0; i < 9; i++)
			if (b[i] > b[i + 1])
			{
				t = b[i];
				b[i] = b[i + 1];
				b[i + 1] = t;
				flag = 1;
			}
	} while (flag == 1);
	cout << "Сортированный массив" << endl;
	for (i = 0; i < 10; i++)
	{
		cout << setw(4) << a[i];
	}
	cout << endl;
	system("pause");
}
