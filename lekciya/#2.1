//поиск минимальных и максимальных чисел массива
#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
	setlocale(LC_ALL, "ru");
	int a[10], i, b[10];
	srand((unsigned)time(NULL));//вкл генератор случайных чисел
	cout << "Исходный массив" << endl;
	for (i = 0; i < 10; i++)
	{
		a[i] = rand() % 100 - 50;//генерим случайное число от -50 до 100
		cout << setw(4) << a[i];
	}
	int max = a[0], imax = 0;
	for (i=0;i<10;i++)
		if (max < a[i]) {
			max = a[i];
			imax = i;
		}
	cout << endl << "MAX=" << max << endl;
	cout << "index MAX=" << imax << endl;

	int min = a[0], imin = 0;
	for (i = 0; i < 10; i++)
		if (min > a[i]) {
			min = a[i];
			imin = i;
		}
	cout << endl << "MIN=" << min << endl;
	cout << "index MIN=" << imin << endl;
	system("pause");
}
